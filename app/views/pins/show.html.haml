#pin_show.row
	.col-md-8.col-md-offset-2
		.panel.panel-default
			.panel-heading.pin_image
				= image_tag @pin.image.url
			.panel-body
				%h1= @pin.title
				%p.description= @pin.description
			.panel-footer
				.row
					.col-md-6
						%p.user
							Ofrecido por
							= @pin.user.name
						%p.price 
							$ 
							= @pin.price
					.col-md-6
						.btn-group.pull-right
							= link_to like_pin_path(@pin), method: :put, class: "btn btn-default" do
								%span.glyphicon.glyphicon-heart
								= @pin.get_upvotes.size
							- if @pin.user == current_user
								= link_to "Editar", edit_pin_path, class: "btn btn-default"
								= link_to "Borrar", pin_path, method: :delete, data: { confirm: "Â¿Seguro?" }, class: "btn btn-default"

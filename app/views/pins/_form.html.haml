= simple_form_for @pin, html: { multipart: true } do |f|
	- if @pin.errors.any?
		#errors
			%h2
				= pluralize(@pin.errors.count, "error")
				prevented this Pin from saving
			%ul
				- @pin.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.input :image, :label => "Foto", input_html: { class: 'form-control' }

	.form-group
		= f.input :title, :label => "Nombre del producto:", input_html: { class: 'form-control' }

	.form-group
		= f.input :description, :label => "Describe el estado del producto, y de que manera se te puede contactar:", input_html: { class: 'form-control' }
	.form-group
		= f.input :price, :label => "Precio:", input_html: { class: 'form-control' }

	= f.submit "Pin", class: "btn btn-primary"
	